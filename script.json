function nextPage() {
    gsap.to(".page1", { x: "-100%", duration: 1, ease: "power2.inOut" });
    gsap.to(".page2", { x: "-100%", duration: 1, ease: "power2.inOut" });
}

function prevPage() {
    gsap.to(".page1", { x: "0%", duration: 1, ease: "power2.inOut" });
    gsap.to(".page2", { x: "0%", duration: 1, ease: "power2.inOut" });
}
